
 <div class="container">
  <div class="row">
   <div class="col-md-3">
     <%=render "users/list",user: @user%>
     <%=render "books/list",book: @new_book%>
   </div>
   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
     <tbody>
      <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
           <%=link_to @user.name, user_path(@user)%></td>
       <td><%=@book.title%></td>
       <td><%=@book.body%></td>
       <% if @book.user.id==current_user.id%>
       <td><%=link_to "Edit",edit_book_path(@book.id)%></td>
       <td><%=link_to "Destroy",book_path(@book.id), method: :delete, "date-confim"=>"本当に削除しますか?"%></td>
       <%end%>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
 </div>
