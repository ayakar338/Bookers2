
<div class="container">
  <div class="row">
     <div class="col-lg-4">
      <%=render "users/list",user: @user%>
      <%=render "books/list",book: @book%>
     </div>
     <div class="col-lg-8">
    <table class="table table-striped">

       <h1>Books</h1>
　　　<tbody>
　　　<thead>
       <tr>
        <th class="img"></th>
        <th>Title</th>
        <th>Opinion</th>
       </tr>
      </thead>


      <% @books.each do |book|%>
        <tr>
          <%=link_to user_path(book.user.id) do%>
         <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
         <%end%>
         <td>
          <%=link_to book_path(book.id) do%>
             <%=book.title%>
          <%end%></td>
         <td><%=book.body%></td>
        </tr>
      <%end%>
     </tbody>
     </table>
     </div>
  </div>
</div>

<%=render "homes/list"%>
