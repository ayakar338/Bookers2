<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"></div>
    <h1>User info</h1>
    <%= form_with model:@user,url: user_path, local:true do |f| %>
   <div class="form-group">
    <label for="user_name">Name</label>
    <p><%= f.text_field :name,class:"form-control" %></p>
   </div>
   <div>
    <label for="user_image">Image</label>
    <%= f.attachment_field:profile_image, class:"form-control-file"%>
   </div>
   <div class="form-group">
    <label for="user_introduction">introduction</label>
    <%= f.text_area :introduction,class:"form-control" %>
   </div>
   <div class="form-group">
    <%=f.submit "Update User",class:"btn btn-secondary"%>
   </div>
    <%end%>
  </div>
 </div>
</div>
